<a href="../meetings">Meetings</a>
<% if @participants.blank? %>
<p>There are no participants registered.</p>
<% else %>
	<p>Theses are the current registered participants:</p>
	
	<ul id="participants">
	<% @participants.each do |participant| %>
	
	<li>
	    <%= link_to participant.name, participant %>
	    <b><%= link_to 'Edit', edit_participant_path(participant) %></b>
	    <b><%= link_to 'Delete', participant, :confirm => 'Are you sure you want to delete this participant?', :method => :delete %></b>
	</li>
	
	<% end %>
	</ul>
<% end %>
<p><%= link_to "Add new participante", {:action => 'new' }%></p>
